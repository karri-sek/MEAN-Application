extends ../includes/layout

block main-content
    .navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#')
                    img.img-responsive(src='img/expo-e-logo-white.png', alt='Exponential-e')
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='#') Dashboard
                    li
                        a(href='#') Settings
                    li
                        a(href='#') Profile
                    li
                        a(href='#') Help
                form.navbar-form.navbar-right
                    input.form-control(type='text', placeholder='Search...')
    .container-fluid
        .row
            .col-sm-12.col-md-12.main
                h1.page-header Product pricing
                form
                    .row
                        .form-group.col-md-6
                            label(for='selSupplier') Supplier
                            select#selSupplier.form-control
                                option New Co Ltd
                                option Old Co Ltd
                        .form-group.col-md-6
                            label(for='selProduct') Product
                            select#selProduct.form-control
                                option Small wongle
                                option Large wongle
                                option Super wongle
                h2.sub-header Product details
                .table-responsive
                    table.table.table-striped
                        thead
                            tr
                                th #
                                th Supplier
                                th Product
                                th Price
                        tbody
                            tr
                                td x
                                td xxxx
                                td xxxx
                                td xxxx
